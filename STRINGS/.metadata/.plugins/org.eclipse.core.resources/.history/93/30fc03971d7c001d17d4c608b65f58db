package unico;

public class ejercicio3 {
//Implementar un método que reciba una cadena e indique si el carácter de la posición central es o no un espacio.


	public static void main(String[] args) {
	System.out.println(esEspacio("aa aa"));
		

	}

private static boolean esEspacio(String cad) {
	boolean res;

	res = cad.substring(cad.length()/2, (cad.length()/2)+1).equals(" ") ? true : false;
	
	return res;
}

}
