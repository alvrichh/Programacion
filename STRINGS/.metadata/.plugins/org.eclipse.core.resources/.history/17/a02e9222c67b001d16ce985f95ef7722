package unico;

public class CuentaCorriente {

	// ATRIBUTOS
	private String numero;
	private Double saldo; // si fuera en min√∫scula sale 0.0 en lugar de null

	CuentaCorriente() {
		this.setNumero("sin especificar");
		this.saldo = 0.0;
	}
	//ctr + shift / 
	// CONSTRUCTORES

	CuentaCorriente(Double saldo) {
	//lo correcto en lugar de asignarlo de manera directa, inicializamos el objeto
		setSaldo(saldo);
	}

	CuentaCorriente(String numero) {
		//this.setNumero(numero);
		setNumero(numero);
	}

//	CuentaCorriente(String num,Double dinerito){
//		numero = num;
//		saldo = dinerito;
//	}
	CuentaCorriente(String numero, Double saldo) {
		this.setNumero(numero);
		this.saldo = saldo;
	}

	void setSaldo(Double saldo) {
		if (saldo <= 0.0) {
			this.saldo = saldo;
		}
	}

	//
	Double getSaldo() {
		return this.saldo;
	}

	void setNumero(String numero) {
		
		this.numero = numero;
	}
	String getNumero() {
		return this.numero;
	}
	void vaciar() {
		setSaldo(0.0);
	}
	void ingresar(Double cantidad) {
		//this.saldo = this.saldo + cantidad;
		setSaldo(getSaldo() + cantidad);
	}

}
