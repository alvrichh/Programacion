package unico;

public class ejercicio2 {
//Implementar un método que reciba una cadena e indique si el carácter de la posición central es o no un espacio.


	public static void main(String[] args) {
	System.out.println(esEspacio("    "));
		

	}

private static boolean esEspacio(String cad) {
	boolean res;

	res = cad.substring(0, cad.length()).equals(" ") ? true : false;
	
	return res;
}

}
